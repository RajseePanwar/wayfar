<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context=".BadrinathFragment"
    android:layout_marginTop="60dp">

    <!-- TODO: Update blank fragment layout -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="11dp"
          app:cardCornerRadius="11dp"
          app:cardUseCompatPadding="true"
          app:cardBackgroundColor="#6BDFED"
          android:layout_marginTop="50dp">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="176dp"
              android:src="@drawable/badrinath"/>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="11dp"
          app:cardElevation="11dp"
          app:cardBackgroundColor="#6BDFED"
          app:cardUseCompatPadding="true">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Badrinath Temple"
                  android:textSize="29sp"
                  android:layout_marginLeft="70dp"
                  android:layout_marginRight="70dp"
                  android:textColor="#C21292"
                  android:textStyle="bold"/>

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginRight="10dp"
                  android:text="@string/Badrinath_Intro"
                  android:textColor="@color/black"
                  android:textSize="20sp" />
          </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="11dp"
          app:cardElevation="11dp"
          app:cardBackgroundColor="#6BDFED"
          app:cardUseCompatPadding="true">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="History"
                  android:textSize="29sp"
                  android:layout_marginLeft="140dp"
                  android:layout_marginRight="140dp"
                  android:textColor="#C21292"
                  android:textStyle="bold"/>

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/Badrinath_History"
                  android:textSize="20sp"
                  android:textColor="@color/black"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"/>
          </LinearLayout>

      </androidx.cardview.widget.CardView>

  </LinearLayout>

</ScrollView>