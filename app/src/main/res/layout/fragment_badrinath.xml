<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context=".BadrinathFragment"
    android:layout_marginTop="60dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="11dp"
            app:cardElevation="11dp"
            app:cardBackgroundColor="@color/cardsColor"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="11dp"
                    app:cardCornerRadius="11dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/smallCardsColor"
                    android:layout_marginTop="40dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:src="@drawable/badrinath"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="11dp"
                    app:cardBackgroundColor="@color/smallCardsColor"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Badrinath Temple"
                            android:textAlignment="center"
                            android:textColor="@color/headings"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Badrinath Temple is situated in Chamoli district in the state of Uttarakhand, India. It is a Hindu holy place, and is one of the four sites in India\'s Char Dham pilgrimage. It is also part of India\'s Chota Char Dham pilgrimage circuit. The temple in Badrinath is also a sacred pilgrimage site for Vaishnavites. Badrinath is also gateway to several mountaineering expeditions headed to mountains like Nilkantha. &#xA; &#xA;Badrinath is a destination for pilgrims and tourists alike. The temple attracts devotees from all over India and even beyond. The sacred Alaknanda River flows near the temple, and the surrounding landscapes offer breathtaking views of the Himalayan mountains. The town comes to life during the pilgrimage season, which typically runs from late April to early November."
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="11dp"
                    app:cardBackgroundColor="@color/smallCardsColor"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Historical Importance"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/headings"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Badrinath is associated with Lord Vishnu, one of the principal deities in the Hindu pantheon. It is believed to be one of the four Char Dham pilgrimage sites, with the other three being Kedarnath, Gangotri, and Yamunotri. The Char Dham Yatra is an important pilgrimage for Hindus, and visiting these sites is considered highly auspicious. &#xA; &#xA;.According to legend, Adi Shankaracharya discovered a black stone image of Lord Badrinarayan made of Shaligram stone in the Alaknanda River. He originally enshrined it in a cave near the Tapt Kund hot springs. In the sixteenth century, the King of Garhwal moved the murti to the present temple."
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="11dp"
                    app:cardBackgroundColor="@color/smallCardsColor"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Photos"
                            android:textAlignment="center"
                            android:textColor="@color/headings"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"/>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="350dp"
                                    android:layout_height="250dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/badrinathphoto1" />

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="250dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/badrinathphoto2" />

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="250dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/badrinathphoto3" />

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="250dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/badrinathphoto4" />

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="250dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/badrinathphoto5" />

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/badrinathphoto6" />

                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="11dp"
                    app:cardBackgroundColor="@color/smallCardsColor"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How To Reach"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/headings"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:text="To reach Badrinath, you have to travel to Rishikesh. Rishikesh is well connected through trains and roads. The nearest airport is the Jolly Grant airport in dehradun which is 21Km away from Rishikesh. &#xA;Further we have to travel through NH58 to reach Badrinath. You may find direct buses and taxis from Rishikesh to Badrinath. You have to travel 291Km by road to reach Badrinath. &#xA; &#xA;Some major towns on the way include Devprayag, Srinagar, Rudraprayag, Karnaprayag, Nandaprayag, Chamoli, Joshimath, Vishnuprayag. &#xA;You may find many restaurants and hotels to stay in these places."
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"
                                android:text="New Delhi to Badrinath map"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imgdelhibadrimap"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="10dp"
                                        android:src="@drawable/newdelhi_badrinath_map" />

                                    <ImageView
                                        android:id="@+id/imgrishikeshbadrimap"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="20dp"
                                        android:src="@drawable/rishikesh_badrinath_map" />

                                </LinearLayout>
                            </HorizontalScrollView>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="11dp"
                    app:cardBackgroundColor="@color/smallCardsColor"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nearby Places"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/headings"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="There are many beautiful and adventurous places to visit near Badrinath. Some of them include: &#xA; &#xA;Mana Gaon: Mana is a first Indian village from the border of India and China in the Himalayas. It is located in the district of Chamoli.  It\'s just 3 kms from Badrinath town. The village is on the banks of the River Saraswati. The village is surrounded by Himalayan hills. &#xA; &#xA; Vasudhara Falls: Vasudhara Falls surging near the holy city of Badrinath is one of the most enchanting places to visit in Uttarakhand. This ravishing waterfall drops from a height of 400 feet about 122 metres above sea level. There is a trek of 5Km from Mana to reach this waterfall. &#xA; &#xA;Bheem pul:It is located near Mana village. You will find Vyas Gufa while travelling through Mana and at the end of the village, a big boulder over a rivulet can be seen. This giant boulder is called the Bheem Pul. It is believed that Bheem, one of the Pandavas made this natural bridge while their journey to the swarg."
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="11dp"
                    app:cardBackgroundColor="@color/smallCardsColor"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Precautionary Measures"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/headings"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Here are some precautions that one should take while visiting Badrinath. &#xA; It is advisable to wear warm and comfortable clothes that can be layered easily. Additionally, you should carry a raincoat or umbrella in case of sudden rainfall.It is important to acclimatize properly before beginning the trek to the Badrinath temple.It is important to drink plenty of water and other fluids to stay hydrated while trekking to Badrinath. This will help prevent altitude sickness and other health problems."
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

  </LinearLayout>

</ScrollView>