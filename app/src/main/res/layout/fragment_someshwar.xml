                                    android:layout_marginLeft="10dp">

                                    <ImageView
                                        android:layout_width="280dp"
                                        android:layout_height="200dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="25dp"
                                        android:src="@drawable/pinnath" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pinnath"
                                        android:textColor="@color/black"
                                        android:textSize="25sp"
                                        android:layout_marginTop="20dp"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:layout_gravity="center"/>

                                </LinearLayout>


                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="11dp"
                    app:cardBackgroundColor="@color/smallCardsColor"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Precautionary Measures"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/headings"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Here are some precautions that one should take while visiting Someshwar Temple. &#xA;It is important to remember that mobiles and cameras are not allowed inside the temple. Remove  your footwear outside the temple. Drinking and smoking are not allowed inside the temple and do not make noise inside the temple. Make sure your Prasad don’t lie on the floor of the temple and do not throw the garbage on the floor of temple."
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

