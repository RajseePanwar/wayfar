                                        android:layout_gravity="center"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="10dp">

                                    <ImageView
                                        android:layout_width="300dp"
                                        android:layout_height="200dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="25dp"
                                        android:src="@drawable/badrinath_near_valley" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Badrinath"
                                        android:textColor="@color/black"
                                        android:textSize="25sp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="20dp"
                                        android:textAlignment="center"
                                        android:layout_gravity="center"/>

                                </LinearLayout>


                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="11dp"
                    app:cardBackgroundColor="@color/smallCardsColor"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Precautionary Measures"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/headings"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Here are some precautions that one should take while visiting the Valley of Flowers. &#xA;Carry lightweight trousers and pants, jumpers, some woollen clothes, trekking shoes, water bottle, torches, and most importantly medicines like muscle relaxant, crape bandage and antibiotics. Also carry high energy foods like dry frutis(fig, cashew nut, almonds, etc), chocolates, fruits, etc
"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

