                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="250dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/valley3"/>

                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="250dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
